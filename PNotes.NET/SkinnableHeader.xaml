<UserControl x:Class="PNotes.NET.SkinnableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Focusable="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="HideImage" Stretch="None" Grid.Column="0" Cursor="Hand" MouseLeftButtonDown="HideImage_MouseLeftButtonDown" MouseLeftButtonUp="HideImage_MouseLeftButtonUp"/>
        <Image x:Name="DeleteImage" Stretch="None" Grid.Column="1" Cursor="Hand" MouseLeftButtonDown="DeleteImage_MouseLeftButtonDown" MouseLeftButtonUp="DeleteImage_MouseLeftButtonUp"/>
    </Grid>
</UserControl>
